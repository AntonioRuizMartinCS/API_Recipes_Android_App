<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference

        android:key="show_welcome_message"

        android:title="Show welcome Message"

        android:defaultValue="false" />

    <EditTextPreference

        android:defaultValue="User"
        android:key="user_name"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="User name"


        />


    <EditTextPreference
        android:defaultValue=""
        android:key="user_email"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="User email"

        />


    <SwitchPreference

        android:key="activate_dark_mode"

        android:title="Dark mode"

        android:defaultValue="false" />

    <SwitchPreference

        android:key="fun_mode"

        android:title="Fun mode"
        android:summary="Only alcohol related recipes"

        android:defaultValue="false" />


</PreferenceScreen>